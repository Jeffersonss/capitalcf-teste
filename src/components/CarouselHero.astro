---
import "/node_modules/@glidejs/glide/dist/glide.min.js";
import "/node_modules/@glidejs/glide/dist/css/glide.core.min.css";
---

<section class="glide">
    <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides">
            <li class="glide__slide">
                <picture>
                    <source
                        srcset="../img-slider.jpg"
                        media="(min-width: 800px)"
                    />
                    <img
                        src="../img-slider-mobile.jpg"
                        alt="Imagem de um ovo em um fundo amarelo"
                    />
                </picture>
                <div class="titulo-noticia">
                    <a
                        href="https://capitalcf.com.br/"
                        class="titulo-noticia__conteudo"
                    >
                        <div>
                            <span>14 de agosto, 2022</span>
                            <h3>
                                Em casa, Capital vence a primeira partida contra
                                o Real e abre 3 pontos na liderança.
                            </h3>
                        </div>
                    </a>
                </div>
            </li>
            <li class="glide__slide">
                <picture>
                    <source
                        srcset="../img-slider.jpg"
                        media="(min-width: 800px)"
                    />
                    <img
                        src="../img-slider-mobile.jpg"
                        alt="Imagem de um ovo em um fundo amarelo"
                    />
                </picture>
                <div class="titulo-noticia">
                    <a
                        href="https://capitalcf.com.br/"
                        class="titulo-noticia__conteudo"
                    >
                        <div>
                            <span>14 de agosto, 2022</span>
                            <h3>
                                Em casa, Capital vence a primeira partida contra
                                o Real e abre 3 pontos na liderança.
                            </h3>
                        </div>
                    </a>
                </div>
            </li>
            <li class="glide__slide">
                <picture>
                    <source
                        srcset="../img-slider.jpg"
                        media="(min-width: 800px)"
                    />
                    <img
                        src="../img-slider-mobile.jpg"
                        alt="Imagem de um ovo em um fundo amarelo"
                    />
                </picture>
                <div class="titulo-noticia">
                    <a
                        href="https://capitalcf.com.br/"
                        class="titulo-noticia__conteudo"
                    >
                        <div>
                            <span>14 de agosto, 2022</span>
                            <h3>
                                Em casa, Capital vence a primeira partida contra
                                o Real e abre 3 pontos na liderança.
                            </h3>
                        </div>
                    </a>
                </div>
            </li>
        </ul>
    </div>

    <div class="glide__bullets" data-glide-el="controls[nav]">
        <button class="glide__bullet" data-glide-dir="=0"></button>
        <button class="glide__bullet" data-glide-dir="=1"></button>
        <button class="glide__bullet" data-glide-dir="=2"></button>
    </div>
</section>

<style lang="scss">
    .glide__slide {
        position: relative;
    }

    .glide__slide img {
        width: 100%;
    }

    .glide__slide .titulo-noticia {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(
            180deg,
            rgba(22, 27, 48, 0) 0%,
            #161b30 96.21%
        );
    }

    .glide__slide .titulo-noticia .titulo-noticia__conteudo {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 84px;
        font-family: "Montserrat", sans-serif;
        font-size: 20px;
        text-decoration: none;
        color: white;
        font-weight: 500;
        line-height: 28px;
    }

    .glide__slide .titulo-noticia .titulo-noticia__conteudo > div {
        position: absolute;
        bottom: 0;
        left: 1.6rem;
        right: 1.6rem;
    }

    .glide__slide .titulo-noticia .titulo-noticia__conteudo span {
        font-size: 18px;
        color: #2a8fd1;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        line-height: 0px;
        margin-bottom: 8px;
    }

    .glide__slide .titulo-noticia .titulo-noticia__conteudo span::before {
        content: "";
        width: 18px;
        height: 20px;
        background-image: url("../icon-calendario.svg");
    }

    .glide__bullets{
        position: absolute;
        bottom: 3.2rem;
        left: 50%;
        transform: translateX(-50%);
    }
    .glide__bullet {
        border: .2rem solid #fff;
        background-color: transparent;
        width: 1.6rem;
        height: 1.6rem;
        border-radius: 100%;
        margin-left: .8rem;

    }

    .glide__bullet:hover {
        border: 2px solid #fff;
        background-color: #fff;
    }

    .glide__bullet:focus,
    .glide__bullet--active {
        border: 2px solid #2a8fd1;
        background-color: #2a8fd1;
    }

    @media (min-width: 36.25em) {
        .glide__slide .titulo-noticia .titulo-noticia__conteudo > div {
            left: 64px;
            right: 64px;
        }
    }

    @media (min-width: 64em) {
        .glide__slide .titulo-noticia .titulo-noticia__conteudo > div {
            left: 100px;
            right: 100px;
        }
    }

    @media (min-width: 68.75em) {
        .glide__slide .titulo-noticia .titulo-noticia__conteudo > div {
            left: 193px;
            right: 193px;
        }
    }
</style>

<script>
    import Glide from "../../node_modules/@glidejs/glide";
    new Glide(".glide", {
        type: "carousel",
        slidesToShow: 1,
        draggable: true,
        dots: "glide__bullets",
        gap: 0,
        autoplay: 6000,
        hoverpause: true,
    }).mount();
</script>
